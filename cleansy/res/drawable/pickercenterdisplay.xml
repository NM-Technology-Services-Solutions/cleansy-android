<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"   >

    <solid
        android:color="@color/pickerdisplay" >
    </solid>

    <padding
        android:top="10dp"
        android:bottom="10dp"
        android:right="10dp"
        android:left="10dp"    >
    </padding>

    <stroke 
        android:width="2dp"
        android:color="@color/pickerdisplayborder"/>
    
    <corners
        android:bottomRightRadius="0dp"
        android:bottomLeftRadius="0dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"  >
    </corners>

</shape>